@inject ShopFront.Services.CartService CartService
@{
    var cartCount = CartService.GetCart().Sum(x => x.Quantity);
}
<header>
<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
            <img src="/Images/klikoLogo.png" style="height:5rem;widht:7rem;"/>
        </a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a class="nav-link text-dark px-2" href="/">Anasayfa</a></li>
			<li>
                @await Component.InvokeAsync("Categories")
            </li>
                <li><a class="nav-link text-dark" asp-controller="Anasayfa" asp-action="About">Hakkımızda</a></li>
            <li><a class="nav-link text-dark" asp-controller="Anasayfa" asp-action="Contact">İletişim</a></li>
        </ul>
            <i class="bi bi-search"></i>
        <form action="/Products" class="col-3 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
            <input type="search" class="form-control" name="q" placeholder="Ara..." aria-label="Search">
        </form>
        <div class="col-3 text-end">
            @if (Context.User.Identity.IsAuthenticated)
            {
                    <a href="/Account" class="btn btn-outline-primary me-2"><i class="bi bi-person-circle"></i></a>
                    <a href="/Account/Logout" class="btn btn-danger me-2"><i class="bi bi-door-closed"></i></a>
                    <a href="/Cart" class="btn btn-outline-success me-2 position-relative">
                        <i class="bi bi-cart"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="@(cartCount > 0 ? "" : "display:none;")">
                            @cartCount
                        </span>
                    </a>
                    if(Context.User.IsInRole("Admin"))
                    {
                        <a href="/Admin" class="btn btn-secondary"><i class="bi bi-gear"></i></a>
					}
            }
            else
            {
                    <a href="/Account/Login" class="btn btn-outline-primary me-2"><i class="bi bi-person-circle"></i></a>
                    <a href="/Account/SignUp" class="btn btn-primary"><i class="bi bi-person-fill-add"></i></a>
            }
        </div>
    </header>
</div>
</header>