@model List<CartItem>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
<div class="container bg-light bg-gradient py-3">
    <h2>Sepet</h2>
    @if (!ViewData.ModelState.IsValid)
    {
        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="alert alert-danger">@error.ErrorMessage</div>
        }
    }
    <table class="table">
        <tr>
            <th>Ürün</th>
            <th>Adet</th>
            <th>Birim Fiyat</th>
            <th>Stok</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@item.ProductStock</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Kaldır</button>
                    </form>
                </td>
            </tr>
        }
    </table>
    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">Sepetinizde ürün bulunmamaktadır.</div>
    }
    else
    {
        <div class="alert alert-success">
            Toplam Tutar: @Model.Sum(x => x.Price * x.Quantity).ToString("c")
        </div>
	}
    <form asp-action="Clear" method="post">
        <button type="submit" class="btn btn-warning"><i class="bi bi-trash"></i> Sepeti Temizle</button>
    </form>
    <form asp-action="Order" method="post">
        <button type="submit" class="btn btn-success"><i class="bi bi-box-seam-fill"></i> Sipariş</button>
    </form>
</div>
